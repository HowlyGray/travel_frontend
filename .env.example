# Environment Configuration Example
# Copy this file to .env.local for local development

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_SHARING=true
REACT_APP_ENABLE_COMMENTS=true

# Theme
REACT_APP_DEFAULT_THEME=light
REACT_APP_THEME_MODE=auto

# Image Service
REACT_APP_IMAGE_SERVICE=picsum

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=fr
REACT_APP_SUPPORTED_LANGUAGES=fr,en,es,de

# Build
REACT_APP_BUILD_DATE=$(date)
REACT_APP_VERSION=1.0.0

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Third-party Services
REACT_APP_MAPBOX_TOKEN=
REACT_APP_CLOUDINARY_CLOUD_NAME=
